<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>com.rcpcompany.target</artifactId>
	<version>5-SNAPSHOT</version>
	<packaging>pom</packaging>

	<parent>
		<artifactId>com.rcpcompany.parent</artifactId>
		<groupId>com.rcpcompany</groupId>
		<version>1-SNAPSHOT</version>
		<relativePath>../com.rcpcompany.parent</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<!-- make target file available for incremental builds -->
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
									<!-- note: the file name must be ${classifier}.target -->
								<artifact>
									<file>uibindings-3.8-rcp.target</file>
									<type>target</type>
									<classifier>uibindings-3.8-rcp</classifier>
								</artifact>
								<artifact>
									<file>uibindings-3.8-rcp-test.target</file>
									<type>target</type>
									<classifier>uibindings-3.8-rcp-test</classifier>
								</artifact>
								<artifact>
									<file>uibindings-3.8-rap.target</file>
									<type>target</type>
									<classifier>uibindings-3.8-rap</classifier>
								</artifact>
								<artifact>
									<file>uibindings-3.8-rap-test.target</file>
									<type>target</type>
									<classifier>uibindings-3.8-rap-test</classifier>
								</artifact>
								<artifact>
									<file>uibindings-3.8-none.target</file>
									<type>target</type>
									<classifier>uibindings-3.8-none</classifier>
								</artifact>
								<artifact>
									<file>uibindings-3.8-none-test.target</file>
									<type>target</type>
									<classifier>uibindings-3.8-none-test</classifier>
								</artifact>
								<artifact>
									<file>uibindings-4.2.target</file>
									<type>target</type>
									<classifier>uibindings-4.2</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>